<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdg="clr-namespace:WWSearchDataGrid.Modern.WPF;assembly=WWSearchDataGrid.Modern.WPF"
                    xmlns:converters="clr-namespace:WWSearchDataGrid.Modern.WPF.Converters;assembly=WWSearchDataGrid.Modern.WPF">

    <converters:BooleanToVisibilityCollapsedConverter x:Key="BooleanToVisibilityCollapsedConverter" />
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    <converters:ValueToCountConverter x:Key="ValueToCountConverter" />

    <!--#region SearchTextBox-->

    <!--  Default SearchTextBox Style  -->
    <Style x:Key="CustomSearchTextboxStyle" TargetType="{x:Type sdg:SearchTextBox}">
        <Style.Resources>
            <!--  Surface  -->
            <SolidColorBrush x:Key="SearchTextBox.BackgroundBrush" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="SearchTextBox.BackgroundBrush.Hover" Color="#FFF8F9FB" />
            <SolidColorBrush x:Key="SearchTextBox.BackgroundBrush.Readonly" Color="#FFF7F7F7" />

            <!--  Border  -->
            <SolidColorBrush x:Key="SearchTextBox.BorderBrush.Default" Color="#FFD0D5DD" />
            <SolidColorBrush x:Key="SearchTextBox.BorderBrush.Hover" Color="#FFA8B0BB" />
            <SolidColorBrush x:Key="SearchTextBox.BorderBrush.Focused" Color="#FF2B88FF" />
            <SolidColorBrush x:Key="SearchTextBox.BorderBrush.Disabled" Color="#FFE5E7EB" />

            <!--  Text  -->
            <SolidColorBrush x:Key="SearchTextBox.ForegroundBrush" Color="#FF111827" />
            <SolidColorBrush x:Key="SearchTextBox.WatermarkBrush" Color="#FF6B7280" />

            <!--  Icons  -->
            <SolidColorBrush x:Key="SearchTextBox.SearchIconBrush" Color="#FF4B5563" />

            <!--  Clear button  -->
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.BackgroundBrush.Default" Color="#00FFFFFF" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.BackgroundBrush.Hover" Color="#FFEFF4FF" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.BackgroundBrush.Pressed" Color="#FFDCE9FF" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.ForegroundBrush.Default" Color="#FF4B5563" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.ForegroundBrush.Hover" Color="#FFB00020" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.ForegroundBrush.Pressed" Color="#FF8C0019" />

            <!--  Popup  -->
            <SolidColorBrush x:Key="SearchTextBox.Popup.Background" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="SearchTextBox.Popup.Border" Color="#FFD0D5DD" />
            <CornerRadius x:Key="SearchTextBox.Popup.CornerRadius">10</CornerRadius>
        </Style.Resources>

        <!--  Defaults  -->
        <Setter Property="Background" Value="{StaticResource SearchTextBox.BackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource SearchTextBox.BorderBrush.Default}" />
        <Setter Property="Foreground" Value="{StaticResource SearchTextBox.ForegroundBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="KeyboardNavigation.TabNavigation" Value="Local" />
        <Setter Property="KeyboardNavigation.DirectionalNavigation" Value="Contained" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="AllowDrop" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type sdg:SearchTextBox}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            KeyboardNavigation.TabNavigation="Local"
                            SnapsToDevicePixels="True">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Toggle Search Button (left icon)  -->
                            <Button x:Name="PART_SearchButton"
                                    Grid.Column="0"
                                    Focusable="True"
                                    Margin="6,0,0,0"
                                    VerticalAlignment="Center"
                                    Width="24"
                                    Height="24"
                                    IsTabStop="True"
                                    ToolTip="Toggle search dropdown">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="Foreground" Value="{StaticResource SearchTextBox.SearchIconBrush}" />
                                        <Setter Property="BorderThickness" Value="1" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6"
                                                            SnapsToDevicePixels="True">
                                                        <TextBlock Foreground="{TemplateBinding Foreground}"
                                                                   Text="&#xE721;"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   FontFamily="{TemplateBinding FontFamily}"
                                                                   FontSize="{TemplateBinding FontSize}" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowToggleButton, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#0F2B88FF" />
                                                <Setter Property="BorderBrush" Value="#AA2B88FF" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1A2B88FF" />
                                                <Setter Property="BorderBrush" Value="#FF2B88FF" />
                                            </Trigger>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="#142B88FF" />
                                                <Setter Property="BorderBrush" Value="#FF2B88FF" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!--  Text area  -->
                            <Grid Grid.Column="1">
                                <!--  Watermark  -->
                                <TextBlock x:Name="WatermarkText"
                                           FontStyle="Italic"
                                           Foreground="{StaticResource SearchTextBox.WatermarkBrush}"
                                           Text="{TemplateBinding Watermark}"
                                           IsHitTestVisible="False"
                                           Margin="10,6"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding HasSearchText, RelativeSource={RelativeSource TemplatedParent}}" Value="False" />
                                                        <Condition Binding="{Binding IsSearchFocused, RelativeSource={RelativeSource TemplatedParent}}" Value="False" />
                                                        <Condition Binding="{Binding IsPopupOpen, RelativeSource={RelativeSource TemplatedParent}}" Value="False" />
                                                        <Condition Binding="{Binding Watermark, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!--  TextBox  -->
                                <TextBox x:Name="PART_TextBox"
                                         Background="Transparent"
                                         Foreground="{TemplateBinding Foreground}"
                                         BorderThickness="0"
                                         CaretBrush="{TemplateBinding Foreground}"
                                         SelectionBrush="#FF2B88FF"
                                         Padding="10,6"
                                         HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                         VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                         FontFamily="{TemplateBinding FontFamily}"
                                         FontSize="{TemplateBinding FontSize}"
                                         FontWeight="{TemplateBinding FontWeight}"
                                         ContextMenu="{TemplateBinding ContextMenu}"
                                         IsTabStop="True"
                                         KeyboardNavigation.TabNavigation="None" />
                            </Grid>

                            <!--  Clear Button (right icon)  -->
                            <Button x:Name="PART_ClearButton"
                                    Grid.Column="2"
                                    Focusable="True"
                                    Command="{Binding ClearCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                    Margin="0,0,6,0"
                                    VerticalAlignment="Center"
                                    Width="24"
                                    Height="24"
                                    IsTabStop="True"
                                    ToolTip="Clear search">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource SearchTextBox.ClearButton.BackgroundBrush.Default}" />
                                        <Setter Property="Foreground" Value="{StaticResource SearchTextBox.ClearButton.ForegroundBrush.Default}" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            SnapsToDevicePixels="True">
                                                        <TextBlock Foreground="{TemplateBinding Foreground}"
                                                                   Text="&#xE711;"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   FontFamily="{TemplateBinding FontFamily}"
                                                                   FontSize="{TemplateBinding FontSize}" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding HasSearchText, RelativeSource={RelativeSource TemplatedParent}}" Value="True" />
                                                    <Condition Binding="{Binding ShowClearButton, RelativeSource={RelativeSource TemplatedParent}}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible" />
                                            </MultiDataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SearchTextBox.ClearButton.BackgroundBrush.Hover}" />
                                                <Setter Property="Foreground" Value="{StaticResource SearchTextBox.ClearButton.ForegroundBrush.Hover}" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SearchTextBox.ClearButton.BackgroundBrush.Pressed}" />
                                                <Setter Property="Foreground" Value="{StaticResource SearchTextBox.ClearButton.ForegroundBrush.Pressed}" />
                                            </Trigger>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="#14B00020" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!--  Results Popup  -->
                            <Popup x:Name="PART_Popup"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"
                                   AllowsTransparency="True"
                                   IsOpen="{Binding IsPopupOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   Focusable="True"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide"
                                   StaysOpen="True">
                                <Border Background="{StaticResource SearchTextBox.Popup.Background}"
                                        BorderBrush="{StaticResource SearchTextBox.Popup.Border}"
                                        BorderThickness="1"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                        MaxHeight="260"
                                        CornerRadius="{StaticResource SearchTextBox.Popup.CornerRadius}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#99000000"
                                                          Opacity="0.35"
                                                          BlurRadius="12"
                                                          ShadowDepth="2" />
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--  Header with Sort Toggle  -->
                                        <Border Grid.Row="0"
                                                Background="#FFF5F5F5"
                                                BorderBrush="#FFDDDDDD"
                                                BorderThickness="0,0,0,1"
                                                Padding="4">
                                            <Button x:Name="PART_SortToggleButton"
                                                    Command="{Binding ToggleSortModeCommand, RelativeSource={RelativeSource AncestorType={x:Type sdg:SearchTextBox}}}"
                                                    Padding="6,2"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Content="{Binding SortModeText, RelativeSource={RelativeSource TemplatedParent}}"
                                                    FontSize="11">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="Foreground" Value="#FF666666" />
                                                        <Setter Property="BorderBrush" Value="#FFCCCCCC" />
                                                        <Setter Property="BorderThickness" Value="1" />
                                                        <Setter Property="Cursor" Value="Hand" />
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            Padding="{TemplateBinding Padding}"
                                                                            CornerRadius="3">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFF0F0F0" />
                                                                <Setter Property="BorderBrush" Value="#FF999999" />
                                                            </Trigger>
                                                            <DataTrigger Binding="{Binding IsSortByQuantity, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                <Setter Property="Background" Value="#FFE3F2FD" />
                                                                <Setter Property="BorderBrush" Value="#FF0078D4" />
                                                                <Setter Property="Foreground" Value="#FF0078D4" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Border>

                                        <ListBox x:Name="PART_ListBox"
                                                 Grid.Row="1"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                 VirtualizingPanel.IsVirtualizing="True"
                                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                                 ItemsSource="{Binding ActualItemsSource, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel Orientation="Vertical" />
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <sdg:HighlightTextBlock Grid.Column="0"
                                                                                HighlightTextBlockText="{Binding}"
                                                                                HighlightText="{Binding Text, RelativeSource={RelativeSource AncestorType=sdg:SearchTextBox}}"
                                                                                TextWrapping="NoWrap"
                                                                                TextTrimming="CharacterEllipsis">
                                                            <sdg:HighlightTextBlock.HighlightRunStyle>
                                                                <Style TargetType="{x:Type Run}">
                                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                                    <Setter Property="Background" Value="#aafff000" />
                                                                </Style>
                                                            </sdg:HighlightTextBlock.HighlightRunStyle>
                                                        </sdg:HighlightTextBlock>

                                                        <!--  Count Display  -->
                                                        <TextBlock Grid.Column="1"
                                                                   Foreground="#FF999999"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="10">
                                                            <TextBlock.Text>
                                                                <MultiBinding Converter="{StaticResource ValueToCountConverter}">
                                                                    <Binding Path="." />
                                                                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type sdg:SearchTextBox}}" Path="ColumnValueCounts" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ListBoxItem}">
                                                    <Setter Property="Padding" Value="12,8" />
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                    <Setter Property="Background" Value="Transparent" />
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                                <Border x:Name="Border"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="6"
                                                                        SnapsToDevicePixels="True">
                                                                    <ContentPresenter Margin="{TemplateBinding Padding}"
                                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="Border" Property="Background" Value="#0F2B88FF" />
                                                                        <Setter TargetName="Border" Property="BorderBrush" Value="#FF2B88FF" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsSelected" Value="True">
                                                                        <Setter TargetName="Border" Property="Background" Value="#1A2B88FF" />
                                                                        <Setter TargetName="Border" Property="BorderBrush" Value="#FF2B88FF" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                    </Grid>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>

                    <!--  Visual states via triggers  -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SearchTextBox.BorderBrush.Hover}" />
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SearchTextBox.BackgroundBrush.Hover}" />
                        </Trigger>
                        <Trigger Property="IsSearchFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SearchTextBox.BorderBrush.Focused}" />
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#4D2B88FF"
                                                      Opacity="0.45"
                                                      BlurRadius="8"
                                                      ShadowDepth="0" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SearchTextBox.BorderBrush.Disabled}" />
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                        <Trigger SourceName="PART_TextBox" Property="IsReadOnly" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SearchTextBox.BackgroundBrush.Readonly}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

</ResourceDictionary>