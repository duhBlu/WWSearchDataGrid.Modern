<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdg="clr-namespace:WWSearchDataGrid.Modern.WPF;assembly=WWSearchDataGrid.Modern.WPF"
                    xmlns:converters="clr-namespace:WWSearchDataGrid.Modern.WPF.Converters;assembly=WWSearchDataGrid.Modern.WPF">

    <converters:BooleanToVisibilityCollapsedConverter x:Key="BooleanToVisibilityCollapsedConverter" />
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

    <!--#region SearchTextBox-->

    <!--  Default SearchTextBox Style  -->
    <Style x:Key="CustomSearchTextboxStyle" TargetType="{x:Type sdg:SearchTextBox}">
        <Style.Resources>
            <!-- Surface -->
            <SolidColorBrush x:Key="SearchTextBox.BackgroundBrush" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="SearchTextBox.BackgroundBrush.Hover" Color="#FFF8F9FB" />
            <SolidColorBrush x:Key="SearchTextBox.BackgroundBrush.Readonly" Color="#FFF7F7F7" />

            <!-- Border -->
            <SolidColorBrush x:Key="SearchTextBox.BorderBrush.Default" Color="#FFD0D5DD" />
            <SolidColorBrush x:Key="SearchTextBox.BorderBrush.Hover" Color="#FFA8B0BB" />
            <SolidColorBrush x:Key="SearchTextBox.BorderBrush.Focused" Color="#FF2B88FF" />
            <SolidColorBrush x:Key="SearchTextBox.BorderBrush.Disabled" Color="#FFE5E7EB" />

            <!-- Text -->
            <SolidColorBrush x:Key="SearchTextBox.ForegroundBrush" Color="#FF111827" />
            <SolidColorBrush x:Key="SearchTextBox.WatermarkBrush" Color="#FF6B7280" />

            <!-- Icons -->
            <SolidColorBrush x:Key="SearchTextBox.SearchIconBrush" Color="#FF4B5563" />

            <!-- Clear button -->
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.BackgroundBrush.Default" Color="#00FFFFFF" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.BackgroundBrush.Hover" Color="#FFEFF4FF" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.BackgroundBrush.Pressed" Color="#FFDCE9FF" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.ForegroundBrush.Default" Color="#FF4B5563" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.ForegroundBrush.Hover" Color="#FFB00020" />
            <SolidColorBrush x:Key="SearchTextBox.ClearButton.ForegroundBrush.Pressed" Color="#FF8C0019" />

            <!-- Popup -->
            <SolidColorBrush x:Key="SearchTextBox.Popup.Background" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="SearchTextBox.Popup.Border" Color="#FFD0D5DD" />
            <CornerRadius x:Key="SearchTextBox.Popup.CornerRadius">10</CornerRadius>
        </Style.Resources>

        <!-- Defaults -->
        <Setter Property="Background" Value="{StaticResource SearchTextBox.BackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource SearchTextBox.BorderBrush.Default}" />
        <Setter Property="Foreground" Value="{StaticResource SearchTextBox.ForegroundBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="KeyboardNavigation.TabNavigation" Value="Local" />
        <Setter Property="KeyboardNavigation.DirectionalNavigation" Value="Contained" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="AllowDrop" Value="True" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type sdg:SearchTextBox}">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="True"
                        KeyboardNavigation.TabNavigation="Local">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Toggle Search Button (left icon) -->
                            <Button x:Name="PART_ToggleButton"
                                Grid.Column="0"
                                Focusable="True"
                                IsTabStop="True"
                                Margin="6,0,0,0"
                                VerticalAlignment="Center"
                                Width="24"
                                Height="24"
                                ToolTip="Toggle search dropdown">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="{StaticResource SearchTextBox.SearchIconBrush}" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        SnapsToDevicePixels="True">
                                                        <TextBlock Foreground="{TemplateBinding Foreground}"
                                                               Text="&#xE721;"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontFamily="{TemplateBinding FontFamily}"
                                                               FontSize="{TemplateBinding FontSize}" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowToggleButton, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#0F2B88FF" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1A2B88FF" />
                                            </Trigger>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="#142B88FF" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Text area -->
                            <Grid Grid.Column="1">
                                <!-- Watermark -->
                                <TextBlock x:Name="WatermarkText"
                                       Foreground="{StaticResource SearchTextBox.WatermarkBrush}"
                                       Text="{TemplateBinding Watermark}"
                                       IsHitTestVisible="False"
                                       Margin="10,6"
                                       VerticalAlignment="Center"
                                       FontStyle="Italic"
                                       TextTrimming="CharacterEllipsis">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding HasSearchText, RelativeSource={RelativeSource TemplatedParent}}" Value="False" />
                                                        <Condition Binding="{Binding IsSearchFocused, RelativeSource={RelativeSource TemplatedParent}}" Value="False" />
                                                        <Condition Binding="{Binding IsPopupOpen, RelativeSource={RelativeSource TemplatedParent}}" Value="False" />
                                                        <Condition Binding="{Binding Watermark, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- TextBox -->
                                <TextBox x:Name="PART_TextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{TemplateBinding Foreground}"
                                     FontFamily="{TemplateBinding FontFamily}"
                                     FontSize="{TemplateBinding FontSize}"
                                     FontWeight="{TemplateBinding FontWeight}"
                                     Padding="10,6"
                                     HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                     VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                     SelectionBrush="#FF2B88FF"
                                     CaretBrush="{TemplateBinding Foreground}"
                                     ContextMenu="{TemplateBinding ContextMenu}"
                                     IsTabStop="True"
                                     KeyboardNavigation.TabNavigation="None" />
                            </Grid>

                            <!-- Clear Button (right icon) -->
                            <Button x:Name="PART_ClearButton"
                                Grid.Column="2"
                                Focusable="True"
                                IsTabStop="True"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Width="24"
                                Height="24"
                                ToolTip="Clear search"
                                Command="{Binding ClearCommand, RelativeSource={RelativeSource TemplatedParent}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource SearchTextBox.ClearButton.BackgroundBrush.Default}" />
                                        <Setter Property="Foreground" Value="{StaticResource SearchTextBox.ClearButton.ForegroundBrush.Default}" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6"
                                                        SnapsToDevicePixels="True">
                                                        <TextBlock Foreground="{TemplateBinding Foreground}"
                                                               Text="&#xE711;"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontFamily="{TemplateBinding FontFamily}"
                                                               FontSize="{TemplateBinding FontSize}" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding HasSearchText, RelativeSource={RelativeSource TemplatedParent}}" Value="True" />
                                                    <Condition Binding="{Binding ShowClearButton, RelativeSource={RelativeSource TemplatedParent}}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible" />
                                            </MultiDataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SearchTextBox.ClearButton.BackgroundBrush.Hover}" />
                                                <Setter Property="Foreground" Value="{StaticResource SearchTextBox.ClearButton.ForegroundBrush.Hover}" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SearchTextBox.ClearButton.BackgroundBrush.Pressed}" />
                                                <Setter Property="Foreground" Value="{StaticResource SearchTextBox.ClearButton.ForegroundBrush.Pressed}" />
                                            </Trigger>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="#14B00020" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Results Popup -->
                            <Popup x:Name="PART_Popup"
                               Grid.Column="0"
                               Grid.ColumnSpan="3"
                               IsOpen="{Binding IsPopupOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                               Placement="Bottom"
                               PopupAnimation="Slide"
                               AllowsTransparency="True"
                               StaysOpen="True"
                               Focusable="True">
                                <Border Background="{StaticResource SearchTextBox.Popup.Background}"
                                    BorderBrush="{StaticResource SearchTextBox.Popup.Border}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource SearchTextBox.Popup.CornerRadius}"
                                    MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                    MaxHeight="260">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#99000000" BlurRadius="12" ShadowDepth="2" Opacity="0.35"/>
                                    </Border.Effect>
                                    <ListBox x:Name="PART_ListBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <sdg:HighlightTextBlock
                                                HighlightTextBlockText="{Binding}"
                                                HighlightText="{Binding Text, RelativeSource={RelativeSource AncestorType=sdg:SearchTextBox}}"
                                                TextWrapping="NoWrap"
                                                TextTrimming="CharacterEllipsis" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="12,8" />
                                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#0F2B88FF" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="#1A2B88FF" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>

                    <!-- Visual states via triggers -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SearchTextBox.BorderBrush.Hover}" />
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SearchTextBox.BackgroundBrush.Hover}" />
                        </Trigger>
                        <Trigger Property="IsSearchFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SearchTextBox.BorderBrush.Focused}" />
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#4D2B88FF" BlurRadius="8" ShadowDepth="0" Opacity="0.45" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SearchTextBox.BorderBrush.Disabled}" />
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                        <Trigger SourceName="PART_TextBox" Property="IsReadOnly" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SearchTextBox.BackgroundBrush.Readonly}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

</ResourceDictionary>