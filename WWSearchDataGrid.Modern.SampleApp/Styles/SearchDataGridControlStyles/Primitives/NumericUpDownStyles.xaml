<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdg="clr-namespace:WWSearchDataGrid.Modern.WPF;assembly=WWSearchDataGrid.Modern.WPF">

    <Style x:Key="CustomNumericUpDownStyle" TargetType="{x:Type sdg:NumericUpDown}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type sdg:NumericUpDown}">
                    <Border Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Value Display/Input  -->
                            <TextBox x:Name="PART_TextBox"
                                     Grid.Column="0"
                                     BorderThickness="0"
                                     Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="4,2"
                                     HorizontalContentAlignment="Right"
                                     VerticalContentAlignment="Center" />

                            <!--  Up/Down Buttons  -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  Up Button  -->
                                <RepeatButton x:Name="PART_UpButton"
                                              Grid.Row="0"
                                              Focusable="False"
                                              Command="{Binding IncreaseCommand, RelativeSource={RelativeSource TemplatedParent}}">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Border x:Name="Border"
                                                    Background="#F0F0F0"
                                                    BorderBrush="#CCCCCC"
                                                    BorderThickness="1,0,0,0.5">
                                                <Path Fill="#666666"
                                                      Data="M 0 4 L 3 1 L 6 4"
                                                      Margin="4,2"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#E0E0E0" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#D0D0D0" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>

                                <!--  Down Button  -->
                                <RepeatButton x:Name="PART_DownButton"
                                              Grid.Row="1"
                                              Focusable="False"
                                              Command="{Binding DecreaseCommand, RelativeSource={RelativeSource TemplatedParent}}">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Border x:Name="Border"
                                                    Background="#F0F0F0"
                                                    BorderBrush="#CCCCCC"
                                                    BorderThickness="1,0.5,0,0">
                                                <Path Fill="#666666"
                                                      Data="M 0 1 L 3 4 L 6 1"
                                                      Margin="4,2"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#E0E0E0" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#D0D0D0" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="24" />
    </Style>

    <Style TargetType="{x:Type sdg:NumericUpDown}" BasedOn="{StaticResource CustomNumericUpDownStyle}" />

</ResourceDictionary>