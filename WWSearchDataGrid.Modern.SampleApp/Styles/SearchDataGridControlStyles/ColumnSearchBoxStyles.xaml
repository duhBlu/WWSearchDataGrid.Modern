<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:WWSearchDataGrid.Modern.WPF.Converters;assembly=WWSearchDataGrid.Modern.WPF"
                    xmlns:sdg="clr-namespace:WWSearchDataGrid.Modern.WPF;assembly=WWSearchDataGrid.Modern.WPF">

    <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
    <converters:HasValueToVisibilityConverter x:Key="HasValueToVisibilityConverter" />

    <!--  ColumnSearchBox Style  -->
    <Style x:Key="CustomColumnSearchBoxStyle" TargetType="{x:Type sdg:ColumnSearchBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type sdg:ColumnSearchBox}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  TextBox for non-checkbox columns  -->
                            <TextBox x:Name="PART_SearchTextBox"
                                     Grid.Column="0"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Text="{Binding SearchText, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="6,2"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Height="28"
                                     TabIndex="0"
                                     FontSize="12"
                                     FontFamily="Segoe UI">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCheckboxColumn, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!--  CheckBox for boolean columns  -->
                            <CheckBox x:Name="PART_FilterCheckBox"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      Background="Transparent"
                                      IsChecked="{Binding FilterCheckboxState, RelativeSource={RelativeSource TemplatedParent}}"
                                      Margin="6,5"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      TabIndex="0"
                                      ToolTip="Filter by checkbox state">
                                <CheckBox.Style>
                                    <Style BasedOn="{StaticResource CustomCheckBoxStyle}" TargetType="CheckBox">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCheckboxColumn, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>


                            <Button x:Name="PART_ClearFilterButton"
                                    Grid.Column="1"
                                    Focusable="true"
                                    Cursor="Hand"
                                    Command="{Binding ClearSearchTextCommand, RelativeSource={RelativeSource AncestorType=sdg:ColumnSearchBox}}"
                                    Margin="2,1,5,1"
                                    Padding="4"
                                    VerticalAlignment="Center"
                                    TabIndex="1"
                                    KeyboardNavigation.IsTabStop="True"
                                    ToolTip="Clear filter"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="10"
                                    Content="&#xE8BB;">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Foreground" Value="Gray" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3">
                                                        <ContentPresenter x:Name="contentPresenter"
                                                                          Focusable="False"
                                                                          Margin="{TemplateBinding Padding}"
                                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                          RecognizesAccessKey="True"
                                                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF0F0F0" />
                                                <Setter Property="Foreground" Value="#CC0000" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FFE0E0E0" />
                                                <Setter Property="Foreground" Value="#990000" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5" />
                                                <Setter Property="Cursor" Value="Arrow" />
                                            </Trigger>
                                            <!--  Show clear button when SearchText has content  -->
                                            <DataTrigger Binding="{Binding SearchText.Length, RelativeSource={RelativeSource AncestorType={x:Type sdg:ColumnSearchBox}}, Converter={StaticResource IntToVisibilityConverter}}" Value="{x:Static Visibility.Visible}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <!--  Show clear button when checkbox has filter applied  -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsCheckboxColumn, RelativeSource={RelativeSource AncestorType={x:Type sdg:ColumnSearchBox}}}" Value="True" />
                                                    <Condition Binding="{Binding HasActiveFilter, RelativeSource={RelativeSource AncestorType={x:Type sdg:ColumnSearchBox}}}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button x:Name="PART_AdvancedFilterButton"
                                    Command="{Binding ShowFilterEditorPopup, RelativeSource={RelativeSource TemplatedParent}}"
                                    Grid.Column="2"
                                    Cursor="Hand"
                                    Margin="2,1,5,1"
                                    Padding="4"
                                    VerticalAlignment="Center"
                                    TabIndex="2"
                                    KeyboardNavigation.IsTabStop="True"
                                    ToolTip="Advanced Filter"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="12"
                                    Content="&#xE71C;">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="Gray" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3">
                                                        <ContentPresenter x:Name="contentPresenter"
                                                                          Focusable="False"
                                                                          Margin="{TemplateBinding Padding}"
                                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                          RecognizesAccessKey="True"
                                                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFE6EFFF" />
                                                <Setter Property="Foreground" Value="#0078D4" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FFD0E7FF" />
                                                <Setter Property="Foreground" Value="#005A9E" />
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding AllowRuleFiltering, RelativeSource={RelativeSource TemplatedParent}}" Value="True" />
                                                    <Condition Binding="{Binding SearchText, RelativeSource={RelativeSource AncestorType={x:Type sdg:ColumnSearchBox}}}" Value="" />
                                                    <Condition Binding="{Binding IsCheckboxColumn, RelativeSource={RelativeSource AncestorType={x:Type sdg:ColumnSearchBox}}}" Value="False" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible" />
                                            </MultiDataTrigger>
                                            <DataTrigger Binding="{Binding HasAdvancedFilter, RelativeSource={RelativeSource AncestorType={x:Type sdg:ColumnSearchBox}}}" Value="True">
                                                <Setter Property="Background" Value="#0078D4" />
                                                <Setter Property="BorderBrush" Value="#0078D4" />
                                                <Setter Property="Foreground" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#FFC8C8C8" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
    </Style>

</ResourceDictionary>