    <SolidColorBrush x:Key="ComboBox.BorderBrush.Focused" Color="#0078D4" />
    <SolidColorBrush x:Key="ComboBox.PlaceholderBrush" Color="#888888" />

    <SolidColorBrush x:Key="ComboBoxPopup.BackgroundBrush" Color="White" />
