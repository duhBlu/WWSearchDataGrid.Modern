<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WWSearchDataGrid.Modern.WPF">

    <!-- FilterPopup Default Style -->
    <Style TargetType="{x:Type local:FilterPopup}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FilterPopup}">
                    <Grid Background="Transparent">
                        <Popup x:Name="PART_Popup"
                               AllowsTransparency="True"
                               PopupAnimation="Fade"
                               Placement="{TemplateBinding Placement}"
                               PlacementTarget="{Binding PlacementTarget, RelativeSource={RelativeSource TemplatedParent}}"
                               StaysOpen="False"
                               IsOpen="{TemplateBinding IsOpen}">
                            <Border Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    MaxWidth="{TemplateBinding MaxWidth}"
                                    MaxHeight="{TemplateBinding MaxHeight}"
                                    Margin="10">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="8" ShadowDepth="2" />
                                </Border.Effect>
                                <ContentPresenter Content="{TemplateBinding Content}"
                                                  Margin="8" />
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>