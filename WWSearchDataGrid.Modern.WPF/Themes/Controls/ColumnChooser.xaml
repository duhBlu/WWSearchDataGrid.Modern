<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdg="clr-namespace:WWSearchDataGrid.Modern.WPF"
                    xmlns:i="interactivity">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WWSearchDataGrid.Modern.WPF;component/Themes/Controls/Primitives/ReorderableListBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Converters  -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!--  Default Window Style for ColumnChooser  -->
    <Style x:Key="GenericColumnChooserWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#ADB5BD" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ResizeMode" Value="CanResize" />
        <Setter Property="ShowInTaskbar" Value="False" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="False" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="28"
                              ResizeBorderThickness="4"
                              UseAeroCaptionButtons="True"
                              NonClientFrameEdges="None" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Title Bar  -->
                            <Border Grid.Row="0"
                                    Background="#F8F9FA"
                                    BorderBrush="#DEE2E6"
                                    BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Title Text  -->
                                    <TextBlock Grid.Column="0"
                                               Foreground="#495057"
                                               Text="{Binding Title, RelativeSource={RelativeSource TemplatedParent}}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               WindowChrome.IsHitTestVisibleInChrome="False" />

                                    <!--  Close Button  -->
                                    <Button x:Name="btnClose"
                                            Grid.Column="1"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding Content.CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            Width="28"
                                            Height="28"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="10"
                                            Content="&#xE8BB;"
                                            WindowChrome.IsHitTestVisibleInChrome="True"
                                            ToolTip="Close">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"
                                                                                  TextElement.Foreground="{TemplateBinding Foreground}" />
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Foreground" Value="#666666" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Style.Triggers>
                                                    <!--  Normal hover when enabled  -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Foreground" Value="#333333" />
                                                        <Setter Property="Background" Value="#E5E5E5" />
                                                        <Setter Property="Cursor" Value="Hand" />
                                                    </Trigger>

                                                    <!--  Pressed when enabled  -->
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#CCCCCC" />
                                                    </Trigger>

                                                    <!--  Disabled baseline  -->
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Cursor" Value="Arrow" />
                                                        <Setter Property="IsHitTestVisible" Value="True" />
                                                    </Trigger>

                                                    <!--  Disabled + Hover  -->
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsEnabled" Value="False" />
                                                            <Condition Property="IsMouseOver" Value="True" />
                                                        </MultiTrigger.Conditions>
                                                        <Setter Property="Background" Value="Red" />
                                                        <Setter Property="Cursor" Value="Hand" />
                                                    </MultiTrigger>

                                                    <!--  Disabled + Pressed  -->
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsEnabled" Value="False" />
                                                            <Condition Property="IsPressed" Value="True" />
                                                        </MultiTrigger.Conditions>
                                                        <Setter Property="Background" Value="DarkRed" />
                                                    </MultiTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                            <!--  Content  -->
                            <ContentPresenter Grid.Row="1" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Main ColumnChooser Style  -->
    <Style TargetType="{x:Type sdg:ColumnChooser}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type sdg:ColumnChooser}">
                    <Border Background="White"
                            BorderBrush="#DEE2E6"
                            BorderThickness="1"
                            CornerRadius="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header with Select All and Reorder Buttons  -->
                            <Border Grid.Row="0"
                                    Background="#F8F9FA"
                                    BorderBrush="#DEE2E6"
                                    BorderThickness="0,0,0,1"
                                    Padding="8,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <CheckBox x:Name="PART_SelectAllCheckBox"
                                              Grid.Column="0"
                                              Content="Select All"
                                              IsThreeState="True"
                                              FontWeight="SemiBold"
                                              Foreground="#495057"
                                              VerticalAlignment="Center" />

                                    <!--  Reorder Buttons for Selected Column  -->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                Margin="4,0,0,0"
                                                Visibility="{Binding SourceDataGrid.CanUserReorderColumns, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button x:Name="PART_MoveUpButton"
                                                Width="24"
                                                Height="24"
                                                Margin="2,0"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="10"
                                                Content="&#xE70E;"
                                                ToolTip="Move Selected Column Up"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="#ADB5BD"
                                                                        BorderThickness="1"
                                                                        CornerRadius="2">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"
                                                                                      TextElement.Foreground="{TemplateBinding Foreground}" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Foreground" Value="#495057" />
                                                    <Setter Property="Background" Value="White" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E9ECEF" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#DEE2E6" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Foreground" Value="#CED4DA" />
                                                            <Setter Property="BorderBrush" Value="#E9ECEF" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button x:Name="PART_MoveDownButton"
                                                Width="24"
                                                Height="24"
                                                Margin="2,0"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="10"
                                                Content="&#xE70D;"
                                                ToolTip="Move Selected Column Down"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="#ADB5BD"
                                                                        BorderThickness="1"
                                                                        CornerRadius="2">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"
                                                                                      TextElement.Foreground="{TemplateBinding Foreground}" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Foreground" Value="#495057" />
                                                    <Setter Property="Background" Value="White" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E9ECEF" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#DEE2E6" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Foreground" Value="#CED4DA" />
                                                            <Setter Property="BorderBrush" Value="#E9ECEF" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!--  Column List with Drag-Drop Reordering  -->
                            <AdornerDecorator Grid.Row="1">
                                <sdg:ReorderableListBox x:Name="PART_ColumnList"
                                                    Padding="4"
                                                    ItemsSource="{Binding Columns, RelativeSource={RelativeSource TemplatedParent}}"
                                                    EnableDragDrop="{Binding SourceDataGrid.CanUserReorderColumns, RelativeSource={RelativeSource TemplatedParent}}"
                                                    BorderThickness="0"
                                                    SelectionMode="Single">
                                <sdg:ReorderableListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="2,1" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="itemBorder"
                                                            Padding="8,4"
                                                            CornerRadius="0"
                                                            Background="{TemplateBinding Background}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <CheckBox Grid.Column="0"
                                                                      IsChecked="{Binding IsVisible}"
                                                                      VerticalAlignment="Center"
                                                                      Margin="0,0,8,0"
                                                                      Focusable="False" />

                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding DisplayName}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis" />
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#EDEEEF" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#D6E9F8" />
                                                        </Trigger>
                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="IsSelected" Value="True" />
                                                                <Condition Property="IsMouseOver" Value="True" />
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="Background" Value="#BFD9EF" />
                                                        </MultiTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <!-- Collapse the item while it's being dragged -->
                                            <DataTrigger Binding="{Binding Path=(sdg:DragHelpers.IsDragged), RelativeSource={RelativeSource Self}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Setter Property="IsHitTestVisible" Value="False" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </sdg:ReorderableListBox.ItemContainerStyle>
                            </sdg:ReorderableListBox>
                            </AdornerDecorator>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>