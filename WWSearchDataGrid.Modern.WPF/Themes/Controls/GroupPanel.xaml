<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdg="clr-namespace:WWSearchDataGrid.Modern.WPF"
                    xmlns:behaviors="clr-namespace:WWSearchDataGrid.Modern.WPF.Behaviors"
                    xmlns:converters="clr-namespace:WWSearchDataGrid.Modern.WPF.Converters">

    <!--  Converters  -->
    <converters:HierarchicalMarginConverter x:Key="VerticalIndentConverter" Direction="Vertical" IndentPerLevel="8" BaseLeftMargin="4" />

    <!--  GroupPanel Style  -->
    <Style x:Key="GenericGroupPanelStyle" TargetType="{x:Type sdg:GroupPanel}">
        <Setter Property="Background" Value="#F5F5F5" />
        <Setter Property="BorderBrush" Value="#DDDDDD" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type sdg:GroupPanel}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            MinHeight="{TemplateBinding MinHeight}"
                            AllowDrop="True">
                        <Grid>
                            <!--  Empty state message  -->
                            <TextBlock FontStyle="Italic"
                                       Foreground="#999999"
                                       Text="Drag column headers here to group by that column"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding GroupedColumns.Count, RelativeSource={RelativeSource TemplatedParent}}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!--  Grouped columns display  -->
                            <ItemsControl ItemsSource="{TemplateBinding GroupedColumns}">
                                <ItemsControl.Style>
                                    <Style TargetType="ItemsControl">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding GroupedColumns.Count, RelativeSource={RelativeSource TemplatedParent}}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ItemsControl.Style>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type sdg:GroupColumnInfo}">
                                        <Border Background="White"
                                                BorderBrush="#CCCCCC"
                                                Width="Auto"
                                                Height="24"
                                                BorderThickness="1"
                                                Margin="{Binding GroupLevel, Converter={StaticResource VerticalIndentConverter}}"
                                                Padding="8,0"
                                                CornerRadius="3"
                                                Cursor="Hand"
                                                behaviors:GroupPanelBehaviors.EnableClickToSort="True">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="White" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F0F0F0" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <!--  Column header text  -->
                                            <TextBlock Text="{Binding HeaderText}"
                                                       VerticalAlignment="Center"
                                                       FontWeight="SemiBold" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
