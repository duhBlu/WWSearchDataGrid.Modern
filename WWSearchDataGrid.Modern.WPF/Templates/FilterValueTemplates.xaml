<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdgCore="clr-namespace:WWSearchDataGrid.Modern.Core;assembly=WWSearchDataGrid.Modern.Core"
                    xmlns:sdg="clr-namespace:WWSearchDataGrid.Modern.WPF"
                    xmlns:converters="clr-namespace:WWSearchDataGrid.Modern.WPF.Converters">

    <!--  Converters  -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />

    <!--  Colors and Brushes  -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="HoverBrush" Color="#F3F3F3" />
    <SolidColorBrush x:Key="BorderBrush" Color="#DDDDDD" />
    <SolidColorBrush x:Key="GrayTextBrush" Color="#666" />

    <Style x:Key="VirtualizedScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="CanContentScroll" Value="True" />
        <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
        <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <!--  CheckBox Style for Filter Values  -->
    <Style x:Key="FilterValueCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <Border x:Name="Border"
                                    Background="White"
                                    BorderBrush="#999"
                                    BorderThickness="1"
                                    Width="16"
                                    Height="16"
                                    CornerRadius="3">
                                <Path x:Name="CheckMark"
                                      Stroke="Transparent"
                                      Data="M 0 4 L 3 7 L 8 1"
                                      StrokeThickness="2"
                                      Stretch="Uniform" />
                            </Border>
                        </BulletDecorator.Bullet>
                        <ContentPresenter Margin="6,0,0,0" VerticalAlignment="Center" />
                    </BulletDecorator>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SelectionBrush}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SelectionBrush}" />
                            <Setter TargetName="CheckMark" Property="Stroke" Value="White" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#E5F3FF" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="FlatListFilterValuesTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Search Box  -->
            <Grid Margin="0,0,0,8">

                <TextBox Grid.Row="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="Search values...">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White"
                                                BorderBrush="#CCC"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <Grid>
                                                <TextBlock Foreground="#999"
                                                           Text="{TemplateBinding Tag}"
                                                           Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource NullToVisibilityConverter}}"
                                                           Margin="8,6"
                                                           VerticalAlignment="Center" />
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              Margin="6,4"
                                                              VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <Button Visibility="{Binding SearchText.Length, RelativeSource={RelativeSource AncestorType={x:Type sdgCore:FlatListFilterValueViewModel}}, Converter={StaticResource IntToVisibilityConverter}}"
                        Cursor="Hand"
                        Command="{Binding ClearSearchTextCommand}"
                        Margin="0,0,5,0"
                        Padding="4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        ToolTip="Clear filter"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="10"
                        Content="&#xE8BB;">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Foreground" Value="Gray" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <ContentPresenter x:Name="contentPresenter"
                                                              Focusable="False"
                                                              Margin="{TemplateBinding Padding}"
                                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              RecognizesAccessKey="True"
                                                              TextElement.Foreground="{TemplateBinding Foreground}"
                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF0F0F0" />
                                    <Setter Property="Foreground" Value="#CC0000" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFE0E0E0" />
                                    <Setter Property="Foreground" Value="#990000" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5" />
                                    <Setter Property="Cursor" Value="Arrow" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <!--  Select All with Count  -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,4">
                <CheckBox Style="{StaticResource FilterValueCheckBoxStyle}"
                          IsChecked="{Binding SelectAllState}"
                          Content="(Select All)"
                          IsThreeState="True" />
                <TextBlock Foreground="#666"
                           Text="{Binding SelectedItemsCount}"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!--  Virtualized ListBox instead of ItemsControl  -->
            <ListBox Grid.Row="2"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemsSource="{Binding FilteredValues}"
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     VirtualizingPanel.ScrollUnit="Pixel">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Style="{StaticResource FilterValueCheckBoxStyle}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayValue}" />
                                <TextBlock Foreground="#999"
                                           Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                           Visibility="{Binding ShowItemCount, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           Margin="4,0,0,0" />
                            </StackPanel>
                        </CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DataTemplate>

    <!--  TreeView Item Style  -->
    <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="IsExpanded" Value="False" />
        <!--  Start collapsed for performance  -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeViewItem">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Border Name="Bd"
                                Grid.Row="0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="19" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ToggleButton x:Name="Expander"
                                              Grid.Column="0"
                                              IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              Width="16"
                                              Height="16"
                                              ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Path x:Name="ExpandPath"
                                                  Fill="#666"
                                                  Data="M 0 0 L 4 4 L 0 8 Z"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="ExpandPath" Property="Data" Value="M 0 0 L 8 0 L 4 4 Z" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <ContentPresenter x:Name="PART_Header"
                                                  Grid.Column="1"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  ContentSource="Header" />
                            </Grid>
                        </Border>

                        <ItemsPresenter x:Name="ItemsHost"
                                        Grid.Row="1"
                                        Visibility="Collapsed" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="true">
                            <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="HasItems" Value="false">
                            <Setter TargetName="Expander" Property="Visibility" Value="Hidden" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Optimized Grouped TreeView Template with Virtualization  -->
    <DataTemplate x:Key="GroupedTreeViewFilterValuesTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Group By Column Header  -->
            <Border Grid.Row="0"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,0,0,1"
                    Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Grouped by: {0}">
                                <Binding Path="GroupByColumn" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>

                    <!--  Group Options Button  -->
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Grid.Column="1"
                            Width="20"
                            Height="20"
                            ToolTip="Group Options">
                        <Path Fill="#666"
                              Data="M12,16A2,2 0 0,1 14,18A2,2 0 0,1 12,20A2,2 0 0,1 10,18A2,2 0 0,1 12,16M12,10A2,2 0 0,1 14,12A2,2 0 0,1 12,14A2,2 0 0,1 10,12A2,2 0 0,1 12,10M12,4A2,2 0 0,1 14,6A2,2 0 0,1 12,8A2,2 0 0,1 10,6A2,2 0 0,1 12,4Z"
                              Width="12"
                              Height="12"
                              Stretch="Uniform" />
                    </Button>
                </Grid>
            </Border>

            <!--  Search Box  -->
            <Grid Grid.Row="1" Margin="0,8,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="PART_GroupSearchBox"
                         Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="Search groups and values...">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White"
                                                BorderBrush="#CCCCCC"
                                                BorderThickness="1"
                                                CornerRadius="2">
                                            <Grid>
                                                <TextBlock Foreground="Gray"
                                                           Text="{TemplateBinding Tag}"
                                                           Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource NullToVisibilityConverter}}"
                                                           Margin="8,6"
                                                           VerticalAlignment="Center" />
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              Margin="6,4"
                                                              VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button Grid.Column="1"
                        Command="{Binding SelectAllCommand}"
                        Margin="5,0,0,0"
                        Padding="8,4"
                        Content="Select All" />

                <Button Grid.Column="2"
                        Command="{Binding ClearAllCommand}"
                        Margin="5,0,0,0"
                        Padding="8,4"
                        Content="Clear All" />
            </Grid>

            <!--  Expand/Collapse All Bar  -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,4">
                <Button x:Name="ExpandAllButton"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Margin="0,0,8,0"
                        ToolTip="Expand All Groups">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#666"
                              Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                              Margin="0,0,4,0"
                              Width="12"
                              Height="12" />
                        <TextBlock Foreground="#666" Text="Expand All" />
                    </StackPanel>
                </Button>

                <Button x:Name="CollapseAllButton"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        ToolTip="Collapse All Groups">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#666"
                              Data="M19,13H5V11H19V13Z"
                              Margin="0,0,4,0"
                              Width="12"
                              Height="12" />
                        <TextBlock Foreground="#666" Text="Collapse All" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!--  Virtualized TreeView  -->
            <TreeView Grid.Row="3"
                      BorderThickness="0"
                      ItemsSource="{Binding GroupedValues}"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <TreeView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </TreeView.ItemsPanel>

                <TreeView.Resources>
                    <!--  Group Template with Smart Selection  -->
                    <HierarchicalDataTemplate DataType="{x:Type sdgCore:FilterValueGroup}" ItemsSource="{Binding Children}">
                        <Border x:Name="GroupBorder"
                                Background="Transparent"
                                Padding="2">
                            <CheckBox Style="{StaticResource FilterValueCheckBoxStyle}"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      IsThreeState="True">
                                <CheckBox.Content>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayValue}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold" />

                                        <TextBlock Grid.Column="1"
                                                   Foreground="#0078D4"
                                                   Text="{Binding GetSelectedChildCount, StringFormat='({0} selected)'}"
                                                   Visibility="{Binding IsSelected, Converter={StaticResource NullToVisibilityConverter}}"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="11" />

                                        <TextBlock Grid.Column="2"
                                                   Foreground="#666666"
                                                   Text="{Binding ItemCount, StringFormat=' [{0}]'}"
                                                   Margin="4,0,0,0"
                                                   VerticalAlignment="Center" />
                                    </Grid>
                                </CheckBox.Content>
                            </CheckBox>
                        </Border>
                        <HierarchicalDataTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="GroupBorder" Property="Background" Value="#F5F5F5" />
                            </Trigger>
                        </HierarchicalDataTemplate.Triggers>
                    </HierarchicalDataTemplate>

                    <!--  Item Template with Counts  -->
                    <DataTemplate DataType="{x:Type sdgCore:FilterValueItem}">
                        <Border x:Name="ItemBorder"
                                Background="Transparent"
                                Padding="2">
                            <CheckBox Style="{StaticResource FilterValueCheckBoxStyle}"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Margin="20,1,1,1">
                                <CheckBox.Content>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayValue}"
                                                   VerticalAlignment="Center">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="{Binding DisplayValue}" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBlock Grid.Column="1"
                                                   Foreground="#999999"
                                                   Text="{Binding ItemCount, StringFormat='({0})'}"
                                                   Visibility="{Binding ItemCount, Converter={StaticResource CountToVisibilityConverter}}"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center" />
                                    </Grid>
                                </CheckBox.Content>
                            </CheckBox>
                        </Border>
                        <DataTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FAFAFA" />
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </TreeView.Resources>

                <TreeView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource TreeViewItemStyle}" TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="True" />
                        <!--  Start expanded for better UX  -->
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>

            <!--  Selection Summary  -->
            <Border Grid.Row="4"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,1,0,0"
                    Margin="0,8,0,0"
                    Padding="8,4">
                <TextBlock FontStyle="Italic"
                           Foreground="#666"
                           Text="{Binding SelectionSummary}" />
            </Border>
        </Grid>
    </DataTemplate>

    <!--  Date TreeView Template (Year/Month/Day hierarchy)  -->
    <DataTemplate x:Key="DateTreeViewFilterValuesTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#F5F5F5"
                    BorderBrush="#DDD"
                    BorderThickness="0,0,0,1"
                    Margin="0,0,0,8"
                    Padding="8,4">
                <TextBlock FontStyle="Italic"
                           Foreground="#666"
                           Text="Select date ranges" />
            </Border>

            <TreeView Grid.Row="1"
                      BorderThickness="0"
                      ItemsSource="{Binding GroupedValues}"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
                <TreeView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </TreeView.ItemsPanel>
                <TreeView.Resources>
                    <!--  Year Level  -->
                    <HierarchicalDataTemplate DataType="{x:Type sdgCore:FilterValueGroup}" ItemsSource="{Binding Children}">
                        <CheckBox Style="{StaticResource FilterValueCheckBoxStyle}" IsChecked="{Binding IsSelected, Mode=TwoWay}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayValue}" FontWeight="Bold" />
                                <TextBlock Foreground="#666"
                                           Text="{Binding ItemCount, StringFormat=' ({0} days)'}"
                                           Margin="4,0,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <!--  Month Level nested template  -->
                        <HierarchicalDataTemplate.ItemTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type sdgCore:FilterValueGroup}" ItemsSource="{Binding Children}">
                                <CheckBox Style="{StaticResource FilterValueCheckBoxStyle}" IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayValue}" />
                                        <TextBlock Foreground="#999"
                                                   Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                                   Margin="4,0,0,0" />
                                    </StackPanel>
                                </CheckBox>

                                <!--  Day Level  -->
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate DataType="{x:Type sdgCore:FilterValueItem}">
                                        <CheckBox Style="{StaticResource FilterValueCheckBoxStyle}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  Margin="20,2,2,2">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DisplayValue}" />
                                                <TextBlock Foreground="#999"
                                                           Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                                           Margin="4,0,0,0" />
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>

                <TreeView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource TreeViewItemStyle}" TargetType="TreeViewItem" />
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Grid>
    </DataTemplate>



    <!--  Template Selector  -->
    <sdg:FilterValueTemplateSelector x:Key="FilterValueTemplateSelector"
                                     FlatListTemplate="{StaticResource FlatListFilterValuesTemplate}"
                                     GroupedTreeViewTemplate="{StaticResource GroupedTreeViewFilterValuesTemplate}"
                                     DateTreeViewTemplate="{StaticResource DateTreeViewFilterValuesTemplate}" />


</ResourceDictionary>