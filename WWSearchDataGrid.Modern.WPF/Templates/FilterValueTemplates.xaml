<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdgCore="clr-namespace:WWSearchDataGrid.Modern.Core;assembly=WWSearchDataGrid.Modern.Core"
                    xmlns:sdg="clr-namespace:WWSearchDataGrid.Modern.WPF"
                    xmlns:converters="clr-namespace:WWSearchDataGrid.Modern.WPF.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WWSearchDataGrid.Modern.WPF;component/Themes/Common/CommonStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Converters  -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />

    <!--  TreeView Item Style  -->
    <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="IsExpanded" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeViewItem">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border Name="Bd"
                                Grid.Row="0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="19" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ToggleButton x:Name="Expander"
                                              Grid.Column="0"
                                              BorderThickness="0"
                                              IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              Cursor="Hand"
                                              Width="16"
                                              Height="16"
                                              FontFamily="Segoe MDL2 Assets"
                                              FontSize="12">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <!--  Default appearance  -->
                                            <Setter Property="Foreground" Value="Gray" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="Cursor" Value="Hand" />
                                            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                                            <Setter Property="FontSize" Value="12" />
                                            <Setter Property="Content" Value="&#xE76C;" />
                                            <!--  ChevronRight  -->

                                            <!--  Custom template: no chrome, just a border + ContentPresenter  -->
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="2">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"
                                                                              RecognizesAccessKey="True"
                                                                              TextElement.Foreground="{TemplateBinding Foreground}" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>

                                            <Style.Triggers>
                                                <!--  Checked state: swap to "ChevronDown" glyph, keep colors unchanged  -->
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Content" Value="&#xE70D;" />
                                                    <!--  ChevronDown  -->
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <ContentPresenter x:Name="PART_Header"
                                                  Grid.Column="1"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  ContentSource="Header" />
                            </Grid>
                        </Border>
                        <!--  Add proper indentation for child items  -->
                        <Border x:Name="ItemsHost"
                                Grid.Row="1"
                                Visibility="Collapsed"
                                Margin="19,2,2,2">
                            <ItemsPresenter />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="true">
                            <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="HasItems" Value="false">
                            <Setter TargetName="Expander" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="ItemsHost" Property="Margin" Value="2" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#f0f0f0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Flat List Filter Values Template with Integrated Search  -->
    <DataTemplate x:Key="FlatListFilterValuesTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Search Box  -->
            <sdg:SearchTextBox x:Name="PART_FlatSearchBox"
                               Grid.Row="0"
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Margin="0,0,0,8"
                               Watermark="Search values..." />

            <!--  Select All Checkbox  -->
            <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                      Grid.Row="1"
                      IsChecked="{Binding SelectAllState, Mode=TwoWay}"
                      Margin="0,0,0,8"
                      IsThreeState="True"
                      Content="Select All" />

            <!--  Virtualized ListBox of CheckBoxes  -->
            <ListBox Grid.Row="2"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemsSource="{Binding FilteredValues}"
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     VirtualizingPanel.ScrollUnit="Pixel">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Padding" Value="2,0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#FFF0F0F0" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayValue}" />
                                <TextBlock Foreground="#999"
                                           Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                           Visibility="{Binding ShowItemCount, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           Margin="4,0,0,0" />
                            </StackPanel>
                        </CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Grid.Row="4"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,1,0,0"
                    Margin="0,8,0,0"
                    Padding="8,4">
                <TextBlock FontStyle="Italic"
                           Foreground="#666"
                           VerticalAlignment="Center"
                           Text="{Binding SelectionSummary}" />
            </Border>
        </Grid>
    </DataTemplate>

    <!--  Grouped TreeView Template with Integrated Search  -->
    <DataTemplate x:Key="GroupedTreeViewFilterValuesTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Group By Column Header  -->
            <Border Grid.Row="0"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,0,0,1"
                    Margin="0,0,0,8"
                    Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Grouped by: {0}">
                                <Binding Path="GroupByColumn" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Grid>
            </Border>

            <!--  Search Box  -->
            <sdg:SearchTextBox x:Name="PART_GroupSearchBox"
                               Grid.Row="0"
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Margin="0,0,0,8"
                               Watermark="Search groups and values..." />

            <!--  Select All Checkbox  -->
            <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                      Grid.Row="2"
                      IsChecked="{Binding SelectAllState, Mode=TwoWay}"
                      Margin="0,0,0,8"
                      IsThreeState="True"
                      Content="Select All" />

            <!--  Virtualized TreeView  -->
            <TreeView Grid.Row="3"
                      BorderThickness="0"
                      ItemsSource="{Binding GroupedValues}"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <TreeView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </TreeView.ItemsPanel>

                <TreeView.Resources>
                    <!--  Group Template with Smart Selection  -->
                    <HierarchicalDataTemplate DataType="{x:Type sdgCore:FilterValueGroup}" ItemsSource="{Binding Children}">
                        <Border x:Name="GroupBorder"
                                Background="Transparent"
                                Padding="2">
                            <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      IsThreeState="True">
                                <CheckBox.Content>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayValue}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold" />

                                        <TextBlock Grid.Column="1"
                                                   Foreground="#0078D4"
                                                   Text="{Binding SelectedChildCount, StringFormat='({0} selected)'}"
                                                   Visibility="{Binding IsSelected, Converter={StaticResource NullToVisibilityConverter}}"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="11" />

                                        <TextBlock Grid.Column="2"
                                                   Foreground="#666666"
                                                   Text="{Binding ItemCount, StringFormat=' [{0}]'}"
                                                   Margin="4,0,0,0"
                                                   VerticalAlignment="Center" />
                                    </Grid>
                                </CheckBox.Content>
                            </CheckBox>
                        </Border>
                        <HierarchicalDataTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="GroupBorder" Property="Background" Value="#F5F5F5" />
                            </Trigger>
                        </HierarchicalDataTemplate.Triggers>
                    </HierarchicalDataTemplate>

                    <!--  Item Template with Counts  -->
                    <DataTemplate DataType="{x:Type sdgCore:FilterValueItem}">
                        <Border x:Name="ItemBorder"
                                Background="Transparent"
                                Padding="2">
                            <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Margin="20,1,1,1">
                                <CheckBox.Content>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayValue}"
                                                   VerticalAlignment="Center">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="{Binding DisplayValue}" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>

                                        <TextBlock Grid.Column="1"
                                                   Foreground="#999999"
                                                   Text="{Binding ItemCount, StringFormat='({0})'}"
                                                   Visibility="{Binding ItemCount, Converter={StaticResource CountToVisibilityConverter}}"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center" />
                                    </Grid>
                                </CheckBox.Content>
                            </CheckBox>
                        </Border>
                    </DataTemplate>
                </TreeView.Resources>

                <TreeView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource TreeViewItemStyle}" TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="False" />
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>

            <!--  Selection Summary  -->
            <Border Grid.Row="4"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,1,0,0"
                    Margin="0,8,0,0"
                    Padding="8,4">
                <TextBlock FontStyle="Italic"
                           Foreground="#666"
                           Text="{Binding SelectionSummary}" />
            </Border>
        </Grid>
    </DataTemplate>

    <!--  Date TreeView Template (Year/Month/Day hierarchy)  -->
    <DataTemplate x:Key="DateTreeViewFilterValuesTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Border Grid.Row="0"
                    Background="#F5F5F5"
                    BorderBrush="#DDD"
                    BorderThickness="0,0,0,1"
                    Margin="0,0,0,8"
                    Padding="8,4">
                <TextBlock Foreground="#666"
                           Text="Select date ranges"
                           FontWeight="SemiBold" />
            </Border>

            <!--  Search Box  -->
            <sdg:SearchTextBox x:Name="PART_DateSearchBox"
                               Grid.Row="0"
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Margin="0,0,0,8"
                               Watermark="Search dates (e.g., 2023, January, 15)..." />

            <!--  Select All Checkbox  -->
            <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                      Grid.Row="2"
                      IsChecked="{Binding SelectAllState, Mode=TwoWay}"
                      Margin="0,0,0,8"
                      IsThreeState="True"
                      Content="Select All" />

            <!--  Date TreeView  -->
            <TreeView Grid.Row="3"
                      BorderThickness="0"
                      ItemsSource="{Binding GroupedValues}"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
                <TreeView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </TreeView.ItemsPanel>
                <TreeView.Resources>
                    <!--  Year Level  -->
                    <HierarchicalDataTemplate DataType="{x:Type sdgCore:FilterValueGroup}" ItemsSource="{Binding Children}">
                        <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Margin="2"
                                  IsThreeState="True">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayValue}" FontWeight="Bold" />
                                <TextBlock Foreground="#666"
                                           Text="{Binding ItemCount, StringFormat=' ({0} days)'}"
                                           Margin="4,0,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <!--  Month Level nested template  -->
                        <HierarchicalDataTemplate.ItemTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type sdgCore:FilterValueGroup}" ItemsSource="{Binding Children}">
                                <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Margin="2"
                                          IsThreeState="True">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayValue}" />
                                        <TextBlock Foreground="#999"
                                                   Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                                   Margin="4,0,0,0" />
                                    </StackPanel>
                                </CheckBox>

                                <!--  Day Level  -->
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate DataType="{x:Type sdgCore:FilterValueItem}">
                                        <CheckBox Style="{StaticResource Default_CheckBox_Style}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  Margin="2">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DisplayValue}" />
                                                <TextBlock Foreground="#999"
                                                           Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                                           Margin="4,0,0,0" />
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>

                <TreeView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource TreeViewItemStyle}" TargetType="TreeViewItem" />
                </TreeView.ItemContainerStyle>
            </TreeView>

            <!--  Selection Summary  -->
            <Border Grid.Row="4"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,1,0,0"
                    Margin="0,8,0,0"
                    Padding="8,4">
                <TextBlock FontStyle="Italic"
                           Foreground="#666"
                           Text="{Binding SelectionSummary}" />
            </Border>
        </Grid>
    </DataTemplate>

    <!--  Template Selector  -->
    <sdg:FilterValueTemplateSelector x:Key="FilterValueTemplateSelector"
                                     FlatListTemplate="{StaticResource FlatListFilterValuesTemplate}"
                                     GroupedTreeViewTemplate="{StaticResource GroupedTreeViewFilterValuesTemplate}"
                                     DateTreeViewTemplate="{StaticResource DateTreeViewFilterValuesTemplate}" />

</ResourceDictionary>